{
  "name": "@smartdesign/styles",
  "version": "3.5.0",
  "description": "A shared package providing style variables and basic style sheets to create SmartDesign like components and apps.",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "import-glob-loader": "^1.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "@smartdesign/element-preview": "^0.1.0",
    "@smartdesign/license-generator": "^1.5.0"
  },
  "files": [
    "dist/docs/*",
    "dist/*.css",
    "dist/*.css.map",
    "scss",
    "npm-third-party-licenses.json"
  ],
  "publishConfig": {
    "registry": "http://dcs-lx-nexus1.home.cas.de/nexus/repository/npm-smartdesign/"
  },
  "scripts": {
    "version": "pnpm version",
    "generate-colors": "node ./build-tools/generate-colors-scss.js",
    "dev": "pnpm generate-colors && webpack --mode development",
    "watch": "pnpm generate-colors && webpack watch --mode development",
    "build:no-license": "pnpm generate-colors && webpack",
    "build": "pnpm generate-license && pnpm build:no-license",
    "generate-license": "sd-license-generator --r ../"
  }
}